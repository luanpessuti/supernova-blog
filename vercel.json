{
    "version": 2,
    "builds": [
      {
        "src": "index.js",    
        "use": "@vercel/node",
        "config": {
      "includeFiles": ["views/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"   
      },
      {
        "src": "/(.*)",
        "dest": "index.js"    
      }
    ]
  }